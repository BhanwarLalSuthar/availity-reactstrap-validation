{
  "name": "availity-reactstrap-validation-v3",
  "version": "3.0.0",
  "author": "Bhanwar Lal Suthar <your.email@example.com>",
  "description": "Form validation helpers for reactstrap",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": ">= 20.0.0"
  },
  "scripts": {
    "ci": "npm run lint && npm test",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "cleanup": "rimraf .nyc_output .tmp",
    "start": "webpack-dev-server --config ./webpack.dev.config.js --watch",
    "build:docs": "cross-env WEBPACK_BUILD=production webpack --config ./webpack.dev.config.js",
    "build": "cross-env WEBPACK_BUILD=production webpack --progress && webpack",
    "prebuild": "babel src --out-dir lib",
    "build:es": "babel src --out-dir es --env-name es",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build && npm run build:es && npm run build:types",
    "lint": "eslint src",
    "create-release": "npm test && sh ./scripts/release",
    "publish-release": "npm test && sh ./scripts/publish",
    "publish-npm": "node scripts/publish-npm.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BhanwarLalSuthar/availity-reactstrap-validation.git"
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "es",
    "types",
    "dist"
  ],
  "keywords": [
    "forms",
    "validation",
    "bootstrap",
    "react",
    "component",
    "components",
    "react-component",
    "availity",
    "ui"
  ],
  "contributors": [
    "Bhanwar Lal Suthar bhawarsuthar7023@gmail.com"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BhanwarLalSuthar/availity-reactstrap-validation/issues"
  },
  "homepage": "https://github.com/BhanwarLalSuthar/availity-reactstrap-validation",
  "dependencies": {
    "@babel/runtime": "^7.23.0",
    "classnames": "^2.3.2",
    "core-js": "^3.33.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "reactstrap": ">=9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.23.0",
    "@babel/plugin-transform-class-properties": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/register": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "ajv": "^8.17.1",
    "babel-loader": "^9.1.3",
    "bootstrap": "^5.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "history": "^5.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "lodash.debounce": "^4.0.8",
    "mini-css-extract-plugin": "^2.7.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactstrap": "^9.2.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/__test__/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "__test__/coverage",
    "coverageReporters": [
      "lcov",
      "html",
      "text-summary"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
